    "contentlayer": "^0.3.4",
    "eslint": "^8.48.0",
    "eslint-config-next": "^14.1.0",
    "framer-motion": "^10.16.5",
    "next": "^14.1.0",
    "next-contentlayer": "^0.3.4",
    "postcss": "8.4.29",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-pretty-code": "^0.9.11",
